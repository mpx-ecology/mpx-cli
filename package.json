{
  "name": "root",
  "version": "2.0.5",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "changelog": "node ./scripts/genChangelog.js",
    "clean": "rimraf packages/test/* packages/**/temp/*",
    "lint": "npx eslint --fix . --ext .js",
    "prepare": "husky install",
    "release": "release-it",
    "release:cli": "cd packages/mpx-cli && release-it",
    "pretest": "yarn clean",
    "test": "node ./scripts/test.js",
    "sync": "node ./scripts/sync-mirror --mirror=https://npmmirror.com/sync/"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@vue/cli-test-utils": "5.0.8",
    "@vue/eslint-config-standard": "^6.1.0",
    "babel-jest": "^27.0.6",
    "dotenv": "^16.0.1",
    "eslint": "^7.28.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "execa": "^5.0.0",
    "glob": "^7.2.0",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "lerna": "^3.22.1",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^9.5.0",
    "minimist": "^1.2.8",
    "ora": "^5.0.1",
    "release-it": "^14.13.1",
    "release-it-yarn-workspaces": "^2.0.1",
    "semver": "^7.3.4"
  }
}
