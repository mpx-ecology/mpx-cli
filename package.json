    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^7.28.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "execa": "^5.0.0",
    "glob": "^7.2.0",
    "husky": "^6.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^9.5.0",
    "ora": "^5.0.1"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "none",
